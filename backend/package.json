{
  "name": "qq-krbot-backend",
  "version": "1.0.0",
  "description": "QQ机器人后端服务 - TypeScript + Koa + MySQL + Sutando",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect=0.0.0.0:9229 src/index.ts",
    "debug": "tsx --inspect=0.0.0.0:9229 src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/backend/src/index.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint:fix": "npm run format"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.0",
    "candy-conf": "^1.0.2",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "mysql2": "^3.14.1",
    "node-cron": "^4.2.1",
    "openai": "^5.8.2",
    "sutando": "^1.7.2",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20.10.4",
    "@types/prettier": "^2.7.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "koa",
    "typescript",
    "mysql",
    "sutando",
    "mcp",
    "qq-bot"
  ]
}
